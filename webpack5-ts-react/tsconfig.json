{
  "compilerOptions": {
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": ["ES2020", "DOM"],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "Node",
    "target": "es5",
    "strict": true,
    "resolveJsonModule": true,
    "jsxImportSource": "@emotion/react", // for emotion inline css
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    }
  }
}
